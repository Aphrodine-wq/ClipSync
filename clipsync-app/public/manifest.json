  "shortcuts": [
    {
      "name": "Quick Paste",
      "short_name": "Paste",
      "description": "Quick paste from clipboard history",
      "url": "/?action=paste",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "New Clip",
      "short_name": "New",
      "description": "Create a new clip",
      "url": "/?action=new",
      "icons": [
        {
          "src": "/icons/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search clips",
