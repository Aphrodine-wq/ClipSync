{
  "name": "clipsync",
  "version": "1.0.0",
  "description": "ClipSync - Professional Clipboard Manager Monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "clipsync-app",
    "clipsync-desktop",
    "clipsync-mobile",
    "clipsync-cli",
    "browser-extension",
    "vscode-extension",
    "packages/*"
  ],
  "scripts": {
    "start": "node scripts/launcher.js",
    "build:exe": "pkg scripts/launcher.js --targets node18-win-x64 --output ClipSync.exe",
    "dev": "npm run dev:backend & npm run dev:app",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:app": "npm run dev --workspace=clipsync-app",
    "dev:desktop": "npm run dev --workspace=clipsync-desktop",
    "dev:mobile": "npm run start --workspace=clipsync-mobile",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=backend --if-present",
    "build:app": "npm run build --workspace=clipsync-app",
    "build:desktop": "npm run build:app && npm run build --workspace=clipsync-desktop",
    "build:mobile": "npm run build --workspace=clipsync-mobile --if-present",
    "build:vscode": "npm run compile --workspace=vscode-extension",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=backend",
    "test:app": "npm run test --workspace=clipsync-app --if-present",
    "test:mobile": "npm run test --workspace=clipsync-mobile",
    "install:all": "npm install",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .prettierignore"
  },
  "bin": {
    "clipsync": "./scripts/launcher.js"
  },
  "keywords": [
    "clipsync",
    "clipboard",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "pkg": "^5.8.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
      "tar": "^7.5.3",
      "qs": "^6.11.2",
      "form-data": "^4.0.1",
      "node-forge": "^1.3.1",
      "xmldom": "^0.6.0",
      "plist": "^3.1.0",
      "xml-js": "^0.6.0"
  }
}
